{% comment %}
  Info Box Section for Shopify
  Save this file as: sections/info-box.liquid
{% endcomment %}

<div class="info-box-section">
  <div class="info-box-container">
    {% if section.settings.header != blank %}
      <h2 class="info-box-header">{{ section.settings.header }}</h2>
    {% endif %}
    
    {% if section.settings.subtitle != blank %}
      <div class="info-box-subtitle">{{ section.settings.subtitle }}</div>
    {% endif %}
    
    {% if section.settings.button_label != blank and section.settings.button_url != blank %}
      <div class="info-box-button-wrapper">
        <a href="{{ section.settings.button_url }}" class="info-box-button">
          {{ section.settings.button_label }}
        </a>
      </div>
    {% endif %}
  </div>
</div>

<style>
  .info-box-section {
    padding: 40px 20px;
    background-color: {{ section.settings.background_color | default: '#E7E6F3' }};
  }
  
  .info-box-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 60px 40px;
    background-color: {{ section.settings.background_color | default: '#E7E6F3' }};
    border-radius: {{ section.settings.border_radius | default: '20px 0 20px 0' }};
    text-align: center;
  }
  
  .info-box-header {
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1.2;
    margin: 0 0 24px 0;
    color: {{ section.settings.header_color | default: '#63308A' }};
  }
  
  .info-box-subtitle {
    font-size: 1.125rem;
    line-height: 1.6;
    margin: 0 0 32px 0;
    color: {{ section.settings.subtitle_color | default: '#140A1C' }};
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .info-box-button-wrapper {
    margin-top: 32px;
  }
  
  .info-box-button {
    display: inline-block;
    padding: 16px 32px;
    background-color: {{ section.settings.button_color | default: '#63308A' }};
    color: white;
    text-decoration: none;
    font-weight: 600;
    font-size: 1rem;
    border-radius: 8px;
    transition: all 0.3s ease;
    border: 2px solid {{ section.settings.button_color | default: '#63308A' }};
  }
  
  .info-box-button:hover {
    background-color: transparent;
    color: {{ section.settings.button_color | default: '#63308A' }};
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(99, 48, 138, 0.3);
  }
  
  /* Responsive Design */
  @media (max-width: 768px) {
    .info-box-container {
      padding: 40px 24px;
    }
    
    .info-box-header {
      font-size: 2rem;
    }
    
    .info-box-subtitle {
      font-size: 1rem;
    }
    
    .info-box-button {
      padding: 14px 28px;
      font-size: 0.9rem;
    }
  }
  
  @media (max-width: 480px) {
    .info-box-section {
      padding: 20px 16px;
    }
    
    .info-box-container {
      padding: 32px 20px;
    }
    
    .info-box-header {
      font-size: 1.75rem;
    }
  }
</style>

{% schema %}
{
  "name": "Info Box",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "header",
      "label": "Header",
      "default": "Together, we nurture a community of belonging and care, with Love Always"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Embrace the journey of life with confidence, knowing that Love Always is here to support you every step of the way. Whether you're planning ahead or navigating through challenges, we are dedicated to providing the guidance and compassion you need."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Discover your path"
    },
    {
      "type": "text",
      "id": "button_url",
      "label": "Button URL",
      "default": "https://google.com"
    },
    {
      "type": "header",
      "content": "Colors & Styling"
    },
    {
      "type": "color",
      "id": "header_color",
      "label": "Header Color",
      "default": "#63308A"
    },
    {
      "type": "color",
      "id": "subtitle_color",
      "label": "Subtitle Color",
      "default": "#140A1C"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button Color",
      "default": "#63308A"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#E7E6F3"
    },
    {
      "type": "text",
      "id": "border_radius",
      "label": "Border Radius",
      "default": "20px 0 20px 0",
      "info": "Use CSS border-radius syntax (e.g., '20px 0 20px 0')"
    }
  ],
  "presets": [
    {
      "name": "Info Box",
      "settings": {
        "header": "Together, we nurture a community of belonging and care, with Love Always",
        "subtitle": "Embrace the journey of life with confidence, knowing that Love Always is here to support you every step of the way. Whether you're planning ahead or navigating through challenges, we are dedicated to providing the guidance and compassion you need.",
        "button_label": "Discover your path",
        "button_url": "https://google.com",
        "header_color": "#63308A",
        "subtitle_color": "#140A1C",
        "button_color": "#63308A",
        "background_color": "#E7E6F3",
        "border_radius": "20px 0 20px 0"
      }
    }
  ]
}
{% endschema %}